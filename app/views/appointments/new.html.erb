<h2 class="text-center text-primary my-4">Book an Appointment</h2>

<div class="container card p-4 shadow-lg">
  <%= form_with url: available_doctors_appointments_path, method: :get, remote: true, id: "find-doctors-form", class: "mb-3" do %>
    <div class="form-group">
      <label class="font-weight-bold">Select Department:</label>
      <%= select_tag :department_id, 
            options_from_collection_for_select(@departments, :id, :name), 
            prompt: "Choose a department", 
            class: "form-control" %>
    </div>
    
    <div class="text-center">
      <%= submit_tag "Find Doctors", class: "btn btn-primary btn-lg mt-3" %>
    </div>
  <% end %>

  <!-- Add a div where doctors will be displayed -->
  <div id="doctor-selection" class="mt-4"></div>
</div>
