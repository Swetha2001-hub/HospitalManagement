<div class="container mt-5">
  <h1 class="text-center text-primary">Add New Department</h1>
  
  <div class="card shadow p-4 mt-4">
    <%= form_with model: @department, local: true, class: "needs-validation" do |f| %>
      
      <% if @department.errors.any? %>
        <div class="alert alert-danger">
          <h5><i class="fas fa-exclamation-circle"></i> Please fix the following errors:</h5>
          <ul>
            <% @department.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, "Department Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter department name", required: true %>
      </div>

      <div class="text-center">
        <%= f.submit "Create Department", class: "btn btn-success btn-lg" %>
      </div>
    
    <% end %>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Back to Departments", departments_path, class: "btn btn-secondary" %>
  </div>
</div>
