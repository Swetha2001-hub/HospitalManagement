<%= form_for(@patient, url: create_patient_registration_path, html: { multipart: true }) do |f| %>
  <h3>Personal Information</h3>

  <%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name, placeholder: "First Name", required: true %>

  <%= f.label :middle_name, "Middle Name" %>
  <%= f.text_field :middle_name, placeholder: "Middle Name" %>

  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, placeholder: "Last Name", required: true %>

  <%= f.label :date_of_birth, "Date of Birth" %>
  <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year %>

  <%= f.label :address, "Address" %>
  <%= f.text_field :address, placeholder: "Address", required: true %>

  <%= f.label :contact_number, "Contact Number" %>
  <%= f.telephone_field :contact_number, placeholder: "Contact Number", required: true %>

  <%= f.label :gender, "Gender" %>
  <%= f.select :gender, [["Male", "Male"], ["Female", "Female"], ["Other", "Other"]], prompt: "Select Gender" %>

  <%= f.label :blood_group, "Blood Group" %>
  <%= f.select :blood_group, [["A+", "A+"], ["A-", "A-"], ["B+", "B+"], ["B-", "B-"], ["O+", "O+"], ["O-", "O-"], ["AB+", "AB+"], ["AB-", "AB-"]], prompt: "Select Blood Group" %>

  <%= f.label :photo, "Upload Photo" %>
  <%= f.file_field :photo %>

  <h3>Account Information</h3>

  <%= f.fields_for :user do |u| %>
    <%= u.label :email, "Email" %>
    <%= u.email_field :email, required: true %>

    <%= u.label :password, "Password" %>
    <%= u.password_field :password, required: true %>

    <%= u.label :password_confirmation, "Confirm Password" %>
    <%= u.password_field :password_confirmation, required: true %>
  <% end %>

  <%= f.submit "Register", class: "btn btn-primary" %>
<% end %>
